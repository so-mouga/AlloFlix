{% extends 'base.html.twig' %}

{% block body %}
    <div class="film-block-one">
        <div class="film-info" >
            <h2> {{ myFilm.name }}</h2>
            <div class="film-description" style="display: flex; width: 200px; justify-content: space-between; align-items: center;">
                <p class="grey">{{ myFilm.createdAt|date("m/Y") }}</p>
                {%  for heart in app.user.listFilmHeartStroke %}
                    {% if heart.id == myFilm.id %}
                        <img src="data:image/png;base64,">
                    {% else %}
                        <img src="data:image/png;base64,">
                    {% endif %}
                {% endfor %}
                {%  for watchLater in app.user.listFilmWatchLater %}
                    {% if watchLater.id == myFilm.id %}
                        <img src="data:image/png;base64,">
                    {% else %}
                        <img src="data:image/png;base64,">
                    {% endif %}
                {% endfor %}
                <img src="data:image/png;base64,">
            </div>
            <p>{{ myFilm.description }}</p>

        </div>
        <iframe width="500" height="320"
                src="{{ myFilm.link }}">
        </iframe>
    </div>
    <div class="film-block-two">
        <h1>{{ myFilm.saga.label }}</h1>

        <ul class="list-films">
        {% for film in myFilm.saga.films %}
            {% if myFilm.id != film.id %}
                {% include 'include/film_block.html.twig' %}
            {% endif %}
        {% endfor %}
        </ul>

        <div class="opinion">
            {{ form_start(form, {'attr': {'class': ''}} )}}
            <h1>
                {% if myComment == null %}
                Ajouter un avis
                {% else %}
                Modifier mon avis
                {% endif %}
            </h1>
            <div style="display: flex">
                <label for="note">Note :</label><br />
                {{ form_widget(form.note) }}
            </div>
            {{ form_widget(form.description, {'attr': {'class': '', 'rows':"7", 'cols':"150"}} ) }}
            {{ form_widget(form.valider, {'attr': {'class': 'btn-search'}} ) }}
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>

        <div class="all-comments">
            <h1>Commentaires</h1>
            <div class="commentaire" style=" margin-bottom: 40px; border-bottom: solid 1px #333036;">
                {% for comment in myFilm.comments %}
                    {% if comment.user.id != app.user.id %}
                        <div class="comment-top" style="display: flex">
                            <p>{{ comment.user.pseudo}}</p>
                            <p style="margin-left: 10px;">8/10</p>
                            <img src="data:image/png;base64,">
                            <p class="grey">{{ comment.dateCreate|date("d/m/Y") }}</p>
                        </div>
                        <p>{{ comment.description }}</p>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
    <div id="path_heart" data-path="{{path('login')}}">
    </div>

{% endblock %}

