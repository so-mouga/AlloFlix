{% extends 'base.html.twig' %}

{% block body %}
    <div class="film-selected">
        <h2>Notre selection de film</h2>
        
        {%  for filmSelected in listFilmSelected %}
        <div style="color:white; display:flex;">
        
            <div class="one-film">
        <a href="{{ path('film', { 'filmID': filmSelected.id }) }}">
            <img src="{{ filmSelected.image }}" width="250" height="150">
        </a>
        <a href="{{ path('film', { 'filmID': filmSelected.id }) }}">
            <p>{{ filmSelected.name }}</p>
        </a>
    	</div>
        </div>	 
        {% endfor %}

    </div>
